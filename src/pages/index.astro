---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import About from "../components/About.astro";
import ProjectsGrid from "../components/ProjectsGrid.astro";
---

<BaseLayout
  title="Luis Mars | Projects"
  description="A static hub of live projects, tools, and experiments by Luis Mars."
  canonicalPath="/"
>
  <main class="page">
    <Hero />
    <About />
    <ProjectsGrid />
  </main>
  <footer class="site-footer">
    <p class="footer-brand">Luis Mars</p>
    <p class="footer-note">Live project hub for tools, experiments, and mission resources.</p>
    <nav class="footer-links" aria-label="Footer links">
      <a href="#top">Back to top</a>
      <span aria-hidden="true">/</span>
      <a href="https://github.com/LuisMars" target="_blank" rel="noopener noreferrer">GitHub</a>
      <span aria-hidden="true">/</span>
      <a href="https://es.linkedin.com/in/luis-masi%C3%A1-fuster" target="_blank" rel="noopener noreferrer">LinkedIn</a>
      <span aria-hidden="true">/</span>
      <a href="https://www.metal-archives.com/artists/Luis_%22Masius%22/459234" target="_blank" rel="noopener noreferrer"
        >Metal Archives</a
      >
      <span aria-hidden="true">/</span>
      <a href="https://luismars.itch.io" target="_blank" rel="noopener noreferrer">itch.io</a>
    </nav>
  </footer>
</BaseLayout>
