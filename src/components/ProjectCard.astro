---
interface Props {
  title: string;
  description: string;
  url: string;
}

const { title, description, url } = Astro.props;
---

<article class="project-card">
  <h3>{title}</h3>
  <p>{description}</p>
  <a href={url} target="_blank" rel="noopener noreferrer" aria-label={`Open ${title} in a new tab`}>
    Visit project
  </a>
</article>
